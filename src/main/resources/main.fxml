<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.orthodox.mbbg.controllers.PlayController">
    <VBox alignment="CENTER" layoutX="135.0" layoutY="107.0" prefHeight="210.0" prefWidth="330.0">
        <Label text="Hello world!"/>
        <Label text="This is a simple demo application."/>
        <HBox alignment="CENTER">
            <Button onAction="#previousTrack">
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/mediaplayerIcons/previous.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#startPlaying">
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/mediaplayerIcons/play2.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#pausePlaying">
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/mediaplayerIcons/pause.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#nextTrack">
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/mediaplayerIcons/next.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </VBox>

</AnchorPane>
